<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
	    <meta name="description" content="Scoring">
	    <meta name="author" content="Gian Roi Calvario">
	    <title>GPMS</title>
	    <link rel="icon" href="img/icon.png"/>
		<link rel="stylesheet" href="dist/css/bootstrap.min.css"/>
	    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
	    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	    <script src="dist/js/jquery-3.1.1.min.js"></script>
	    <style>
	    	@font-face {
	    		font-family: 'team';
	    		src: url('dist/fonts/university.otf');
	    	}
	    	@font-face {
	    		font-family: 'game';
	    		src: url('dist/fonts/segmental.ttf');
	    	}
	    	@font-face {
	    		font-family: 'score';
	    		src: url('dist/fonts/Scoreboard.ttf');
	    	}
	    	body {
	    		padding-top: 10px;
	    		padding-left: 15px;
	    		padding-right: 15px;
	    		background: url('dist/img/bg.png');
	    		background-repeat: no-repeat;
    			background-size: cover;
    			color: black;
	    	}
	    	.board {
	    		margin-top: 5%;
	    		background: rgba(255, 255, 255, 1);
	    		padding: 10px;
	    	}
	    	table td, th{
	    		border: 1px solid black !important;
	    	}
	    	table th {
	    		font-family: 'Arial';
	    		font-size: 24pt;
	    		text-align: center;
	    	}
	    	label {
	    		font-family: 'team';
	    		font-size: 18pt;
	    	}
	    	.team-name {
	    		font-size: 36pt;
	    		font-family: 'team';
	    		width: 20%;
	    	}
	    	.score {
	    		font-size: 36pt;
	    		font-family: 'score';
	    		text-align: center;
	    		color: red;
	    	}
	    	.title {
	    		/*background-color: #eeeeee;*/
	    	}
	    	.game {
	    		/*background-color: #42a5f5;*/
	    	}
	    	.plan {
	    		/*background-color: #66bb6a;*/
	    	}
	    	.marketing {
	    		/*background-color: #ff4081;*/
	    	}
	    	.solutions {
	    		/*background-color: #ffee58;*/
	    	}
	    </style>
	</head>
	<body>
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12 board">
					<table class="table table-bordered">
						<label>Scoreboard:</label>
					    <thead>
					      <tr class="title">
					        <th></th>
					        <th>1</th>
					        <th>2</th>
					        <th>3</th>
					        <th>4</th>
					        <th>5</th>
					        <th>6</th>
					        <th>7</th>
					        <th>8</th>
					        <th>9</th>
					        <th>10</th>
					        <th>TOTAL</th>
					      </tr>
					    </thead>
					    <tbody>
					      <tr class="game">
					        <td class="team-name">GAME</td>
					        <td class="score" id="g_0">0</td>
					        <td class="score" id="g_1">0</td>
					        <td class="score" id="g_2">0</td>
					        <td class="score" id="g_3">0</td>
					        <td class="score" id="g_4">0</td>
					        <td class="score" id="g_5">0</td>
					        <td class="score" id="g_6">0</td>
					        <td class="score" id="g_7">0</td>
					        <td class="score" id="g_8">0</td>
					        <td class="score" id="g_9">0</td>
					        <td class="score" id="g_total">0</td>
					      </tr>
					      <tr class="plan">
					        <td class="team-name">PLAN</td>
					        <td class="score" id="p_0">0</td>
					        <td class="score" id="p_1">0</td>
					        <td class="score" id="p_2">0</td>
					        <td class="score" id="p_3">0</td>
					        <td class="score" id="p_4">0</td>
					        <td class="score" id="p_5">0</td>
					        <td class="score" id="p_6">0</td>
					        <td class="score" id="p_7">0</td>
					        <td class="score" id="p_8">0</td>
					        <td class="score" id="p_9">0</td>
					        <td class="score" id="p_total">0</td>
					      </tr>
					      <tr class="marketing">
					        <td class="team-name">MARKETING</td>
					        <td class="score" id="m_0">0</td>
					        <td class="score" id="m_1">0</td>
					        <td class="score" id="m_2">0</td>
					        <td class="score" id="m_3">0</td>
					        <td class="score" id="m_4">0</td>
					        <td class="score" id="m_5">0</td>
					        <td class="score" id="m_6">0</td>
					        <td class="score" id="m_7">0</td>
					        <td class="score" id="m_8">0</td>
					        <td class="score" id="m_9">0</td>
					        <td class="score" id="m_total">0</td>
					      </tr>
					      <tr class="solutions">
					        <td class="team-name">SOLUTIONS</td>
					        <td class="score" id="s_0">0</td>
					        <td class="score" id="s_1">0</td>
					        <td class="score" id="s_2">0</td>
					        <td class="score" id="s_3">0</td>
					        <td class="score" id="s_4">0</td>
					        <td class="score" id="s_5">0</td>
					        <td class="score" id="s_6">0</td>
					        <td class="score" id="s_7">0</td>
					        <td class="score" id="s_8">0</td>
					        <td class="score" id="s_9">0</td>
					        <td class="score" id="s_total">0</td>
					      </tr>
					    </tbody>
					  </table>
				</div>
			</div>
		</div>
		<script>
			var scoreData = {};

			function getData () {
				$.ajax ({
					method: 'GET',
					url: '/score',
					success: function (res) {
						scoreData = res;
						displayData();
					}
				});
			}

			function displayData () {
				document.getElementById('g_0').innerHTML = scoreData[0].g0;
				document.getElementById('g_1').innerHTML = scoreData[0].g1;
				document.getElementById('g_2').innerHTML = scoreData[0].g2;
				document.getElementById('g_3').innerHTML = scoreData[0].g3;
				document.getElementById('g_4').innerHTML = scoreData[0].g4;
				document.getElementById('g_5').innerHTML = scoreData[0].g5;
				document.getElementById('g_6').innerHTML = scoreData[0].g6;
				document.getElementById('g_7').innerHTML = scoreData[0].g7;
				document.getElementById('g_8').innerHTML = scoreData[0].g8;
				document.getElementById('g_9').innerHTML = scoreData[0].g9;
				document.getElementById('g_total').innerHTML = scoreData[0].total;

				document.getElementById('p_0').innerHTML = scoreData[1].p0;
				document.getElementById('p_1').innerHTML = scoreData[1].p1;
				document.getElementById('p_2').innerHTML = scoreData[1].p2;
				document.getElementById('p_3').innerHTML = scoreData[1].p3;
				document.getElementById('p_4').innerHTML = scoreData[1].p4;
				document.getElementById('p_5').innerHTML = scoreData[1].p5;
				document.getElementById('p_6').innerHTML = scoreData[1].p6;
				document.getElementById('p_7').innerHTML = scoreData[1].p7;
				document.getElementById('p_8').innerHTML = scoreData[1].p8;
				document.getElementById('p_9').innerHTML = scoreData[1].p9;
				document.getElementById('p_total').innerHTML = scoreData[1].total;

				document.getElementById('m_0').innerHTML = scoreData[2].m0;
				document.getElementById('m_1').innerHTML = scoreData[2].m1;
				document.getElementById('m_2').innerHTML = scoreData[2].m2;
				document.getElementById('m_3').innerHTML = scoreData[2].m3;
				document.getElementById('m_4').innerHTML = scoreData[2].m4;
				document.getElementById('m_5').innerHTML = scoreData[2].m5;
				document.getElementById('m_6').innerHTML = scoreData[2].m6;
				document.getElementById('m_7').innerHTML = scoreData[2].m7;
				document.getElementById('m_8').innerHTML = scoreData[2].m8;
				document.getElementById('m_9').innerHTML = scoreData[2].m9;
				document.getElementById('m_total').innerHTML = scoreData[2].total;

				document.getElementById('s_0').innerHTML = scoreData[3].s0;
				document.getElementById('s_1').innerHTML = scoreData[3].s1;
				document.getElementById('s_2').innerHTML = scoreData[3].s2;
				document.getElementById('s_3').innerHTML = scoreData[3].s3;
				document.getElementById('s_4').innerHTML = scoreData[3].s4;
				document.getElementById('s_5').innerHTML = scoreData[3].s5;
				document.getElementById('s_6').innerHTML = scoreData[3].s6;
				document.getElementById('s_7').innerHTML = scoreData[3].s7;
				document.getElementById('s_8').innerHTML = scoreData[3].s8;
				document.getElementById('s_9').innerHTML = scoreData[3].s9;
				document.getElementById('s_total').innerHTML = scoreData[3].total;
			}

			window.onload = function () {
				getData();
			}

			setInterval( function () {
				getData();
			}, 1000);
		</script>
	</body>
</html>